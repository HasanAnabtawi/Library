@using LibrarySystem.Models
@model CategoryModel


<div class="pagetitle">
    <h1>Category Editing</h1>

</div><!-- End Page Title -->

<form method="post">


    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" type="text" class="form-control mt-1">

    </div>
    <div class="form-group mt-2">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control mt-1"  >

    </div>



    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>