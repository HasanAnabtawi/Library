@using LibrarySystem.Models
@model BookModel;


<div class="pagetitle">
    <h1>Book Adding</h1>

</div><!-- End Page Title -->

<form method="post" enctype="multipart/form-data">
    
    
    <div class="form-group ">
        <label asp-for="Title">Book Title</label>
        <input asp-for="Title" type="text" class="form-control mt-1" placeholder="Enter Book Title">
        
    </div>
    <div class="form-group mt-1">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" type="text" class="form-control mt-1" placeholder="Enter Book Author">

    </div>
    <div class="form-group mt-1">
        <label asp-for="CategoryId" >CategoryId</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select mt-1" aria-label="Default select example">


     
            <option disabled >---Select options--- </option>
            
        
        </select>
    </div>  

    <div class="form-group mt-1">
        <label asp-for="ISBN">ISBN</label>
        <input asp-for="ISBN" type="text" class="form-control mt-1" placeholder="Enter Book ISBN">

    </div>

    <div class="form-group mt-1">
        <label asp-for="PublicationDate">Publication Date</label>
        <input asp-for="PublicationDate" type="date" class="form-control mt-1" >

    </div>

    <div class="form-group mt-1">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" class="form-select mt-1" aria-label="Default select example">



            <option disabled>---Select options--- </option>
            @foreach(var o in ViewBag.Status)
            {
                <option> @o </option>
            }


        </select>
    </div>



    <div class="form-group mt-1">
        <label asp-for="ImageUrl">Image Upload</label>
        <input asp-for="ImageUrl" name="file" type="file" class="form-control mt-1">

    </div>

   
    <button  type="submit" class="btn btn-success mt-3">Submit</button>
</form>