@using LibrarySystem.Models
@model CategoryModel


<div class="pagetitle">
    <h1>Category Adding</h1>

</div><!-- End Page Title -->

<form method="post">


    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" type="text" class="form-control mt-1" placeholder="Enter Category Name">

    </div>
    <div class="form-group mt-1">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control mt-1" placeholder="Enter Description">

    </div>
  


    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>