@using LibrarySystem.Models
@model BookModel

<div class="pagetitle">
    <h1>Book Deleting</h1>

</div><!-- End Page Title -->


<form method="post">


    <div class="form-group mt-1">
        <label asp-for="Title">Book Title</label>
        <input asp-for="Title" type="text" class="form-control mt-1" disabled />

    </div>
    <div class="form-group mt-1">
        <label asp-for="Author">Author</label>
        <input asp-for="Author" type="text" class="form-control mt-1" disabled>

    </div>

    <div class="form-group mt-1">
        <label asp-for="CategoryId">Category Id</label>
        <input asp-for="CategoryId" type="text" class="form-control mt-1" disabled>

    </div>

   
 

    <div class="form-group mt-1">
        <label asp-for="ISBN">ISBN</label>
        <input asp-for="ISBN" type="text" class="form-control mt-1" disabled>

    </div>

    <div class="form-group mt-1">
        <label asp-for="PublicationDate">Publication Date</label>
        <input asp-for="PublicationDate" type="date" class="form-control mt-1" disabled>

    </div>


    <button type="submit" class="btn btn-danger mt-3">Delete</button>
</form>