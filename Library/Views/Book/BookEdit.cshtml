@using LibrarySystem.Models
@model BookModel



<div class="container">
    <div class="row">

    
    <div class="col-9">
        <h1 class="pagetitle" >Book Editing</h1>


            <form method="post" enctype="multipart/form-data">
                <input asp-for="ImageUrl" hidden />
                <input asp-for="Category" hidden />
                <input asp-for="Id" hidden />

                <div class="form-group mt-1">
                    <label asp-for="Title">Book Title</label>
                    <input asp-for="Title" type="text" class="form-control mt-1" />

                </div>
                <div class="form-group mt-1">
                    <label asp-for="Author">Author</label>
                    <input asp-for="Author" type="text" class="form-control mt-1">

                </div>
                <div class="form-group mt-1">
                    <label asp-for="CategoryId">CategoryId</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select mt-1" aria-label="Default select example">



                        <option disabled>---Select options--- </option>


                    </select>
                </div>




                <div class="form-group mt-1">
                    <label asp-for="ISBN">ISBN</label>
                    <input asp-for="ISBN" type="text" class="form-control mt-1">

                </div>

                <div class="form-group mt-1">
                    <label asp-for="PublicationDate">Publication Date</label>
                    <input asp-for="PublicationDate" type="date" class="form-control mt-1">

                </div>

                <div class="form-group mt-1">
                    <label asp-for="Status">Status</label>
                    <select asp-for="Status" class="form-select mt-1" aria-label="Default select example">



                        <option disabled>---Select options--- </option>
                        @foreach (var o in ViewBag.Status)
                        {
                            <option> @o </option>
                        }


                    </select>
                </div>



                <div class="form-group mt-1">
                    <label asp-for="ImageUrl">Image Upload</label>
                    <input name="file" type="file" class="form-control mt-1">

                </div>


                <button type="submit" class="btn btn-primary mt-3">Update</button>
            </form>
    </div>
    
     <div class="col-3 mt-6 ">
            <img src="@Model.ImageUrl" class="w-100 border border-dark rounded" />
            <h2 class="figure-caption mt-1 text-center">Book Image</h2>
     </div>
     
    
    </div>
</div>



